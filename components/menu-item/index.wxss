/* components/menu-item/index.wxss */
.menu-item {
  width: 100%;
}
.top {
  position: relative;
  /* overflow: hidden; */
}

.top-image {
  border-radius: 10rpx;
  width: 100%;
}

.playCount {
  position: absolute;
  bottom: 12rpx;
  right: 0;
  width: 100rpx;
  height: 30rpx;
  line-height: 30rpx;
  background-color: rgba(0, 0, 0, .4);
  font-size: 24rpx;
  color: #fff;
  padding: 6rpx 10rpx;
  border-radius: 8rpx;
  text-align: center;
}

.content {
  font-size: 26rpx;

  text-overflow: ellipsis;

  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;

  overflow-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;

}