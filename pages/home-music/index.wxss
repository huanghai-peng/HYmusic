/* pages/home-music/index.wxss */
page {
  padding: 0 20rpx;
}

.van-search {
  padding: 10px 0 !important;
}

.home-search .van-search__content {
  background-color: #fff;
}

.images {
  width: 100%;
  vertical-align: middle;
}

.home-swiper {
  border-radius: 10rpx;
  overflow: hidden;
  transform: translateY(0);
}

/* music-bottom-bar */
.music-bottom-bar {
  display: flex;
  justify-content: space-between;
  position: fixed;
  left: 0;
  right: 0;
  bottom: -1px;
  height: 44px;
  line-height: 44px;
  background-color: #FAFAFA;
  box-shadow: 0 -1px 5px rgba(0,0,0,.1);
}

.left,
.right {
  display: flex;
  align-items: center;
}

@keyframes avatarAnima {
  from{
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.avatar {
  position: relative;
  top: -8px;
  width: 44px;
  height: 44px;
  border-radius: 50%;
  margin: 0 20rpx;
  animation: avatarAnima 16s linear infinite;
}


.name {
  font-size: 28rpx;
}

.right {
  display: flex;
  align-items: center;
}

.play-icon,.playlist-icon {
  width: 30px;
  height: 30px;
}

.playlist-icon {
  margin: 0 20rpx;
}